---
import '@fontsource/ibm-plex-mono';

import BaseHead from '../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
// TODO: A better solution than this
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div id="page">
			<div id="container">
				<p class="terminal-output">$ curl {Astro.url}</p>
				<p class="terminal-output">404 Not Found</p>
				<p class="terminal-output">
					{Astro.url.pathname} could not be found. <br /> It probably doesn't exist...
				</p>
				<p class="terminal-output">
					To return to a page that does exist, go to
					<br />{Astro.site}
				</p>
				<p class="terminal-output">
					If you call a support person, give them this info:
					<br />Stop Code: 404 PAGE NOT FOUND
				</p>
			</div>
		</div>
		<style lang="scss">
			@use '../styles/transitions';

			body {
				font-family: 'IBM Plex Mono', monospace;
				background: #000000;
				color: #fefeff;
				height: 100vh;
				margin: 0;
			}

			.terminal-output {
				color: #00ff00;
				text-shadow:
					0 0 10px #00ff00,
					0 0 25px #2aec2a;
			}
		</style>
	</body>
</html>
