---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_DESCRIPTION } from '../../consts';
import { getProjects } from '../../lib/collections';

const posts = await getProjects();

posts.sort((a, b) => {
	if (a.data.featured) {
		return -1;
	}
	if (b.data.featured) {
		return 1;
	}
	return 0;
});

const title = "Juliette's Projects";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header title={title} />
		<main>
			<section>
				<ul class="project-list">
					{
						posts.map((post) => (
							<li>
								<a href={`/projects/${post.slug}/`}>
									{post.data.heroImage && (
										<img
											width={1020}
											height={510}
											src={post.data.heroImage}
											alt=""
											transition:name={`${post.slug} hero`}
										/>
									)}
									{post.data.toy && (
										<span class="toy">
											ðŸ§¸<span class="tooltip">Toy Project</span>
										</span>
									)}
									<h4 class="title">{post.data.title}</h4>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
		<style lang="scss">
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				// margin: 0;
				padding: 0;

				// display: grid;

				// gap: 50px;
				// grid: 300px / auto auto auto;
				// display: flex;
			}
			ul li {
				width: calc(50% - 1rem);

				// a img {
				// 	width: calc(50% - 1rem);
				// }
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
				position: relative;
				padding: 0.5rem;

				span {
					position: absolute;
					top: 0;
					left: 0;
					font-size: 1.25rem;

					.tooltip {
						transition: opacity 100ms ease-in-out;
						opacity: 0;
						// visibility: hidden;
						width: 120px;
						background-color: rgba(0, 0, 0, 0.5);
						color: #fff;
						text-align: center;
						border-radius: 6px;
						padding: 5px 0;

						/* Position the tooltip */
						position: absolute;
						z-index: 1;
						top: 100%;
						left: 50%;
					}

					&:hover .tooltip {
						// visibility: visible;
						opacity: 1;
					}
				}
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</body>
</html>
