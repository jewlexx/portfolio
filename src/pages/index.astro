---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.vue';

// Data Fetching: List all Markdown posts in the repo.

interface Link {
  name: string;
  url: string;
  emoji: string;
}

const links: Link[] = [
  {
    emoji: 'üë©‚Äçüíª',
    name: 'Github',
    url: 'github.com/jewlexx',
  },
  {
    emoji: 'üïäÔ∏è',
    name: 'Twitter',
    url: 'twitter.com/jewelexx',
  },
  {
    emoji: 'üå≤',
    name: 'Linktree',
    url: 'linktr.ee/jewelexx',
  },
];
---

<html lang="en">

<head>
  <MainHead title="Juliette Cordor" description="Juliette Cordor, developer and other things also" />
  <style lang="scss">
    @import '../styles/palette.scss';

    $w-s: 750px;

    html,
    body {
      background-color: $dark-gray;
    }

    .pronouns {
      color: $cambridge-blue;
    }

    .hero {
      position: relative;
      overflow: hidden;

      @media (min-width: $w-s) {
        height: 45vw;
      }
    }

    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 10;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
      padding-left: 2rem;

      @media (min-width: $w-s) {
        padding-left: 4rem;
      }
    }

    .title {
      font-weight: 900;
      font-size: $f-u8;
      margin-bottom: 0.5rem;
      margin-top: 0;

      @media (min-width: $w-s) {
        font-size: $f-u12;
      }
    }

    .grid {
      display: grid;
      grid-gap: 2rem;

      @media (min-width: 1200px) {
        grid-template-columns: 2fr 1fr;
      }
    }

    .role {
      text-decoration: none;
      position: relative;
      display: inline-block;
      font-weight: 900;
      color: $t-bg;
      background-color: $t-fg;
      padding: 0.25em 0.5em;
      z-index: 2;

      @media (min-width: $w-s) {
        font-size: $f-u3;
      }

      +.role {
        margin-left: 1em;
      }

      &:nth-of-type(1) {
        .invert {
          background-color: $pink;
        }
      }

      &:nth-of-type(2) {
        .invert {
          background-color: $blue;
        }
      }

      &:nth-of-type(3) {
        .invert {
          background-color: $green;
        }
      }

      &:hover {
        .invert {
          clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
        }
      }
    }

    .invert {
      position: absolute;
      color: $t-fg;
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      pointer-events: none;
      clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
      transition: clip-path cubibezier(0.4, 0, 0.5, 1) 150ms;
    }

    .subtitle {
      display: block;
      font-weight: 400;
      font-size: $f-d6;
      letter-spacing: -0.0625em;
    }
  </style>
</head>

<body>
  <Nav />
  <main>
    <header class="hero">
      <div class="overlay">
        <h1 class="title">
          Juliette Cordor
          <small class="subtitle"><span class="pronouns">(She/Her)</span>
          </small>
        </h1>
        <div>
          {
          links.map(({ emoji, name, url }) => (
          <a href={`https://${url}`} class="role" target="_blank" rel="noopener noreferrer">
            {emoji} {name}
            <span class="invert">
              {emoji} {name}
            </span>
          </a>
          ))
          }
        </div>
        <!-- <p class="desc">Desc Here</p> -->
      </div>
    </header>
  </main>
</body>

</html>